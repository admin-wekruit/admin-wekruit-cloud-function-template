{
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    },
    "functions": {
        "source": ".",
        "codebase": "default",
        "ignore": [
            "node_modules",
            ".git",
            "firebase-debug.log",
            "firebase-debug.*.log",
            "*.local",
            "firebase.json",
            "tsconfig.json",
            "tsconfig.dev.json",
            ".eslintrc.js",
            "node_modules",
            "src",
            "database",
            "*.log"
        ],
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run lint",
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ],
        "emulators": {
            "functions": {
                "port": 5001,
                "host": "0.0.0.0"
            },
            "firestore": {
                "port": 8080,
                "host": "0.0.0.0"
            },
            "auth": {
                "port": 9099
            },
            "ui": {
                "enabled": true
            },
            "singleProjectMode": true
        }
    }
}